{% extends 'base.html.twig' %}

{% block title %}Items index{% endblock %}

{% block body %}
    <h1>Objet/utilitaire</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Rarete</th>
                <th>Effets</th>
                <th>Recette</th>
                <th>Prix</th>
                <th>Edition</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.nom }}</td>
                <td>{{ item.type }}</td>
                <td>{{ item.rarete }}</td>
                <td>{{ item.effets }}</td>
                <td>{{ item.recette }}</td>
                <td>{{ item.prix }}</td>
                <td>
                    <a href="{{ path('items_show', {'id': item.id}) }}">show</a>
                    <a href="{{ path('items_edit', {'id': item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('items_new') }}">Create new</a>
{% endblock %}
